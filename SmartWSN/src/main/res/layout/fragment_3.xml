<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bootstrap_gray_lighter">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_3_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <ScrollView
        android:id="@+id/fragment_3_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_3_recyclerview">

        <RelativeLayout
            android:id="@+id/fragment_3_graph_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>